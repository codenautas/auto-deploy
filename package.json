{
  "name": "auto-deploy",
  "description": "auto deploy github based project and others",
  "version": "0.0.7",
  "author": "Codenautas <codenautas@googlegroups.com>",
  "license": "MIT",
  "repository": "codenautas/auto-deploy",
  "contributors": [{
    "name": "Emilio Platzer", "email": "emilioplatzer@gmail.com"
  },{
    "name": "Diego Florio", "email": "diegoefe@gmail.com"
  }],
  "dependencies": {
    "fs-extra": "^0.19.0",
    "fs-promise": "^0.3.1",
    "lodash": ">=3.9.1",
    "express": ">=4.12.4",

    "best-promise": "^0.2.2"
  },
  "devDependencies": {
    "istanbul": "~0.3.15",
    "mocha": "~2.2.5",
    "expect.js": ">=0.3.1",

    "expect-called": ">=0.4.0"
  },
  "main":"auto-deploy.js",
  "engines": {
    "node": ">= 0.12.2"
  },
  "scripts": {
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/",
    "start": "node example/server.js",
    "auto-deploy": "node auto-deploy-runner.js"
  },
  "codenautas": {
    "run-in": "server"
  },
  "auto-deploy": {
    "server": "node example/server.js",
    "log": true,
    "logFile": "./server.log",
    "commands":
        {"update": "git pull",
         "reset": "git reset --hard",
         "restart": "nop",
         "stop": "exit"},
    "param": {"pid" : "3344"}
  }
}
